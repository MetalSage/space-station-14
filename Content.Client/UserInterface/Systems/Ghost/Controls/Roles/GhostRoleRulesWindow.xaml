<!-- Space Stories. Изменения апстрима скорее всего несовместимы. -->

<DefaultWindow xmlns="https://spacestation14.io"
            Title="{Loc 'ghost-roles-window-title'}"
            xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
            MinSize="500 300"
            SetSize="500 400">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True">
        <RichTextLabel Name="TopBanner" VerticalExpand="True"/>
        <controls:StripeBack>
            <PanelContainer>
                <Label Name="RequestButton" Text="{Loc 'ghost-roles-window-request-role-button'}" Align="Center" Margin="0 3 0 3"/>
            </PanelContainer>
        </controls:StripeBack>
    </BoxContainer>
</DefaultWindow>
